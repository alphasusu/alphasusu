<div class="row login">
	<div class="small-12 medium-6 large-6 columns left">
		<%= form_for(resource, :as => 'user', url: create_session_path) do |f| %>
			<% if Rails.env.development? %>
				<label>University ID or SUSU Account Email</label>
			<% else %>
				<label>Alpha SUSU Account Email</label>
			<% end %>
			<%= f.text_field :email, :autofocus => true, :placeholder => "abc1g14, david.gilani@gmail.com" %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.submit "Log In", class: "button" %>
		<% end %>
	</div>
	<div class="small-12 medium-6 large-6 columns right">
		<%= render "shared/login_help_links", :view => :login %>
	</div>
</div>

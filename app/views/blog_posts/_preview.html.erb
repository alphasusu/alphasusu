<div class="blog-post-preview">
	<h4><%= link_to preview.title, preview %></h4>
	<% if preview.author %>
		<small><%= image_tag preview.author.get_avatar_url(:small), class: "avatar" %> By <%= link_to preview.author.name, user_path(preview.author) %></small>
	<% else %>
		<small>Unknown Author</small>
	<% end %>
	<div class="show-for-medium-up"><%= render_markdown_preview preview.body %></div>
</div>

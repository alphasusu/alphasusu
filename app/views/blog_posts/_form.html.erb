<%= form_for(@post) do |f| %>
  <div class="row">
    <div class="large-12 columns <%= field_error_class @post, :title %>">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= field_error @post, :title, "Title" %>
    </div>
    <div class="large-12 columns <%= field_error_class @post, :body %>">
      <%= f.label :body %>
      <%= f.text_area :body, class: "markdown" %>
      <%= field_error @post, :body, "Post" %>
    </div>
    <div class="large-12 columns">
      <%= f.submit class: "button" %>
      <% if params[:action] == "edit" %>
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert" %>
      <% end %>
    </div>
  </div>
<% end %>
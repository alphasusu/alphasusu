<%=
  map(:container_id => "map",
      :center => {
      :latlng => [50.93452, -1.39714],
      :zoom => 18
  })
%>

<script>
  var markers = <%=raw @markers.to_json %>;
</script>

<div class="row">
  <% @places.each do |place| %>
    <div class="small-12 medium-6 large-6 columns place padded-item" data-id="<%= place.id %>">
      <h3>
        <%= link_to place.name, place_path(place), id: place.slug %>
      </h3>
      <p><%= render_markdown place.description %></p>
      <% if place.schedule %>
        <%= render place.schedule %>
      <% end %>
    </div>
  <% end %>
</div>

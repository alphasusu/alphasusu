<%= form_for(@headline) do |f| %>
  <div class="row">
    <div class="large-12 columns <%= field_error_class @headline, :title %>">
      <%= f.label :title %>
      <%= f.text_area :title %>
      <%= field_error @headline, :title, "Title" %>
    </div>
    <div class="large-12 columns <%= field_error_class @headline, :body %>">
      <%= f.label :body %>
      <%= f.text_area :body %>
      <%= field_error @headline, :body, "Subtitle" %>
    </div>
    <div class="large-12 columns">
      <%= f.submit class: "button" %>
      <% if params[:action] == "edit" %>
        <%= link_to 'Destroy', @headline, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert" %>
      <% end %>
    </div>
  </div>
<% end %>